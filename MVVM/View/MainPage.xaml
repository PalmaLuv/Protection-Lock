<UserControl x:Class="ProtectionLock.MVVM.View.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProtectionLock.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="900">
    <Grid Background="White">
        <Border Background="Transparent">
            <Grid >
                <Grid.RenderTransform>
                    <RotateTransform Angle="35"/>
                </Grid.RenderTransform>

                <StackPanel Margin="-378,-72,378,72" 
                            RenderTransformOrigin="0.5,0.5">
                    <Border Width="500"
                            Height="80"
                            Margin="-65,0,65,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#9214F5" Offset="0"/>
                                <GradientStop Color="#E831E1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Border Width="500"
                            Height="80"
                            Margin="0,35,0,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#22B7F6" Offset="0"/>
                                <GradientStop Color="#F40E61" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Border Width="500"
                            Height="80"
                            Margin="-135,35,130,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#C52CEB" Offset="0"/>
                                <GradientStop Color="#4F13FC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </StackPanel>

                <StackPanel Margin="629,-140,-628.5,140" 
                            RenderTransformOrigin="0.5,0.5">
                    <Border Width="500"
                            Height="80"
                            Margin="-65,0,65,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#EB177D" Offset="0"/>
                                <GradientStop Color="#E831E1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Border Width="500"
                            Height="80"
                            Margin="0,35,0,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#22B7F6" Offset="0"/>
                                <GradientStop Color="#F40E61" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Border Width="500"
                            Height="80"
                            Margin="-135,35,130,0"
                            CornerRadius="50">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#C52CEB" Offset="0"/>
                                <GradientStop Color="#4F13FC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <ItemsControl ItemsSource="{Binding Buttons}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Markup for the location of the buttons in the future. -->
                    <Grid HorizontalAlignment="Center"
                          Margin="0,18,18,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Row" Value="{Binding Row}"/>
                    <Setter Property="Grid.Column" Value="{Binding Column}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Button  Command="{Binding Command}"
                                 Style="{StaticResource CustomButton}"/>
                        <Label Content="{Binding Content}"
                               Margin="0,-5,0,0"
                               FontWeight="Regular"
                               HorizontalAlignment="Center"
                               FontFamily="Inter"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
